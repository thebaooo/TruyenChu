@model TruyenChu.ViewModels.ChapterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
<main>
    <div class="chapter-wrapper container my-5">
        <a href="#" class="text-decoration-none">
            <h1 class="text-center text-success">@Model.CurrentTitle</h1>
        </a>
        <a href="#" class="text-decoration-none">
            <p class="text-center text-dark">Chương @Model.CurrentChapterNumber: @Model.CurrentTitle</p>
        </a>
        <hr class="chapter-start container-fluid">
        <div class="chapter-nav text-center">
            <div class="chapter-actions chapter-actions-origin d-flex align-items-center justify-content-center">
                @if (Model.PreviousChapterId.HasValue)
                {
                    <a class="btn btn-success me-1 chapter-prev"
                       asp-action="Index" asp-route-id="@Model.PreviousChapterId"
                       title="Chương trước">
                        <span>Chương</span> trước
                    </a>
                }

                <div class="dropdown select-chapter me-1">
                    <span class="btn btn-success dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg style="fill: #fff;" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                            <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z">
                            </path>
                        </svg>
                    </span>

                    <ul class="dropdown-menu select-chapter__list" aria-labelledby="dropdownMenuLink">
                        @foreach (var chapter in Model.AllChapters)
                        {
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-route-id="@chapter.ChapterId">
                                    Chương @chapter.ChapterNumber: @chapter.Title
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                @if (Model.NextChapterId.HasValue)
                {
                    <a class="btn btn-success chapter-next"
                       asp-action="Index" asp-route-id="@Model.NextChapterId"
                       title="Chương tiếp">
                        <span>Chương</span> tiếp
                    </a>
                }
            </div>
        </div>
        <hr class="chapter-end container-fluid">


        <div class="chapter-content mb-3">
            @Model.Content
        </div>

        @* <div class="text-center px-2 py-2 alert alert-success d-none d-lg-block" role="alert">
            Bạn có thể dùng phím
            mũi tên hoặc WASD để
            lùi/sang chương
        </div> *@
    </div>

    <hr class="chapter-start container-fluid">
