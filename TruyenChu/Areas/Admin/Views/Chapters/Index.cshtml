@model TruyenChu.Data.Story
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quản lý các Chương của Truyện: @Model.StoryTitle</h1>

<div>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Chapters" asp-action="Create" asp-route-storyId="@Model.StoryId"><i class="mdi mdi-plus"></i>Create New</a>
</div>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr class="table-warning">
            <th>Số Chương</th>
            <th>Tên Chương</th>
            <th>Ngày Tạo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Chapters != null && Model.Chapters.Any())
        {
            @foreach (var chapter in Model.Chapters)
            {
                <tr class="table-success">
                    <td>
                        @Html.DisplayFor(modelItem => chapter.ChapterNumber) <!-- Hiển thị số chương -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => chapter.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => chapter.CreateDate)

                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Chapters" asp-route-id="@chapter.ChapterId">Chi tiết</a> |
                        <a asp-action="Edit" asp-controller="Chapters" asp-route-id="@chapter.ChapterId">Chỉnh sửa</a> |
                        <a asp-action="Delete" asp-controller="Chapters" asp-route-id="@chapter.ChapterId">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

