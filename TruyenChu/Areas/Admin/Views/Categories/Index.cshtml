@model IEnumerable<TruyenChu.Data.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<div>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Create"><i class="mdi mdi-plus"></i>Create New</a>
</div>
<hr/>
<table class="table table-bordered">
    <thead>
        <tr class="table-warning">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="text-wrap">
                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

